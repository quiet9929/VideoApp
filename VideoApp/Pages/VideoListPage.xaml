<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VideoApp.Pages.VideoListPage"
             xmlns:vm="clr-namespace:VideoApp.ViewModels"
             NavigationPage.HasNavigationBar="False"
             Title="VideoListPage">

    <VerticalStackLayout>
        <VerticalStackLayout>
            <HorizontalStackLayout>
                <Label>类型</Label>
                <ListView ItemsSource="{Binding VideoTypes}" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding .}"></Label>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
            </HorizontalStackLayout>
        </VerticalStackLayout>
        <CollectionView ItemsSource="{Binding VideoList}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="4"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate >
                <DataTemplate >
                    <Grid>
                        <Button Style="{StaticResource VideoButton}" Text="{Binding Name}"  />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>